<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_8"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/image_button_background"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:padding="@dimen/dp_8"
        android:background="@drawable/background_circle_dark"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/image_button_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:elevation="4dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/image_button_background"
        app:layout_constraintEnd_toEndOf="@+id/image_button_background"
        app:layout_constraintStart_toStartOf="@+id/image_button_background"
        app:layout_constraintTop_toTopOf="@+id/image_button_background"
        tools:src="@sample/categories.json/data/drawableIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>