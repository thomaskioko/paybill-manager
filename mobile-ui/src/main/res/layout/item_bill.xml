<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/image_button_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:contentDescription="@null"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_button_background2"
        app:layout_constraintEnd_toEndOf="@+id/image_button_background2"
        app:layout_constraintStart_toStartOf="@+id/image_button_background2"
        app:layout_constraintTop_toTopOf="@+id/image_button_background2"
        tools:src="@sample/categories.json/data/drawableIcon" />


    <ImageButton
        android:id="@+id/image_button_background2"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_circle_dark"
        android:contentDescription="@null"
        android:elevation="2dp"
        android:padding="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bill_name"
        style="@style/TextAppearance.PayBillManager.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/overlay_dark_80"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_button_background2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/text_bill_title" />


    <TextView
        android:id="@+id/tv_bill_paybill"
        style="@style/TextAppearance.PayBillManager.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/spacing_medium"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@+id/tv_bill_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bill_name"
        tools:text="@string/text_bill_number" />


    <TextView
        android:id="@+id/tv_bill_amount"
        style="@style/TextAppearance.PayBillManager.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="@dimen/spacing_medium"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bill_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bill_name"
        tools:text="@string/text_bill_amount" />

    <TextView
        android:id="@+id/tv_bill_account_number"
        style="@style/TextAppearance.PayBillManager.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="@dimen/spacing_medium"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@+id/tv_bill_paybill"
        app:layout_constraintTop_toBottomOf="@+id/tv_bill_paybill"
        tools:text="@string/text_account_number" />


</androidx.constraintlayout.widget.ConstraintLayout>

